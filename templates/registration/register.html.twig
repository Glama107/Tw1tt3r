{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ include('_includes/navigation.html.twig') }}
    <div class="flex justify-center items-center h-screen bg-gray-100 dark:bg-gray-800">

        <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md p-8 max-w-md w-full">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm) }}

            <h1 class="text-xl font-bold mb-4 dark:text-gray-200">Please sign up</h1>

            <div class="flex mb-4 gap-5">
                <div>
                    <label for="inputEmail" class="block text-gray-700 dark:text-gray-200 font-bold">First name</label>
                    {{ form_row(registrationForm.firstname) }}
                </div>

                <div>
                    <label for="inputEmail" class="block text-gray-700 dark:text-gray-200 font-bold">Last name</label>
                    {{ form_row(registrationForm.lastname) }}
                </div>

            </div>

            <div class="my-5">
                <label for="inputEmail" class="block text-gray-700 dark:text-gray-200 font-bold">Pseudo</label>
                {{ form_row(registrationForm.pseudo) }}
            </div>

            <div class="mb-4">
                <label for="inputEmail" class="block text-gray-700 dark:text-gray-200 font-bold">Email</label>
                {{ form_row(registrationForm.email) }}
            </div>

            <div class="mb-4">
                <label for="inputPassword"
                       class="block text-gray-700 dark:text-gray-200 font-bold mb-2">Password</label>
                {{ form_row(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4">
                <label class="inline-flex items-center">
                    {{ form_row(registrationForm.agreeTerms) }}
                    <span class="ml-2 text-gray-700 dark:text-gray-200 font-bold">Agree terms</span>
                </label>
            </div>

            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-indigo w-full"
                    type="submit">
                Sign up
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
