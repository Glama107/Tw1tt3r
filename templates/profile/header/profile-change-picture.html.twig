{{ form_start(form) }}
{{ form_widget(form.profilePicture) }}
<label for="profile_picture_profilePicture" class="relative">
    {% if user.profilePicture %}
        <img class="h-24 w-24 rounded-full mr-4 object-cover"
             src="{{ asset('uploads/profile_pictures/') }}{{ user.profilePicture }}"
             alt="John Doe's avatar">
    {% else %}
        <img class="h-24 w-24 rounded-full mr-4 object-cover"
             src="https://ui-avatars.com/api/?background=random&name={{ user.pseudo }}"
             alt="John Doe's avatar">
    {% endif %}

    <div class="absolute inset-0 bg-gray-800 opacity-0 rounded-full w-24 hover:opacity-75 cursor-pointer transition duration-150 ease-in-out">
        <div class="flex items-center justify-center h-full">
                <span class="text-white text-4xl">
                    <img src="{{ asset('svg/stylo.svg') }}" alt="stylo">
            </span>
        </div>
    </div>
</label>
{{ form_end(form) }}

<script src="{{ asset('js/changePicture.js') }}"></script>
