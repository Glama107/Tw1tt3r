<div class="relative border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-800 rounded-lg p-4 w-96">
    <div class="flex items-center mb-4">
        {% if user.profilePicture %}
            <img class="h-12 w-12 rounded-full mr-4 object-cover"
                 src="{{ asset('uploads/profile_pictures/') }}{{ user.profilePicture }}"
                 alt="">
        {% else %}
            <img class="h-12 w-12 rounded-full mr-4 object-cover"
                 src="https://ui-avatars.com/api/?background=random&name={{ user.pseudo }}"
                 alt="">
        {% endif %}

        <div class="flex flex-col">
            <h3 class="text-gray-900 dark:text-gray-200 font-semibold">{{ article.createdBy.firstname }} {{ article.createdBy.lastname }}</h3>
            <p class="text-gray-600 dark:text-gray-500">
                @{{ article.createdBy.pseudo|lower }}</p>
        </div>
